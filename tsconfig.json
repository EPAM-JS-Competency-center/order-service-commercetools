{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {},
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "**/node_modules/**/*",
    "node_modules",
    "./node_modules/*"
  ]
}
